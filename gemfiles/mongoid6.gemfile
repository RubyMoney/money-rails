source 'https://rubygems.org'

gem 'mongoid', '~> 6.0'
rails_version = ['~> 5.1']
rails_version << '< 5.2.4.1' if RUBY_VERSION < '2.3' # temporary fix until 5.2.4.2 is released
gem 'rails', rails_version
gem 'i18n',    '~> 0.7'

platforms :jruby do
  gem "activerecord-jdbc-adapter"
  gem "activerecord-jdbcsqlite3-adapter"
  gem "jruby-openssl"
end

platforms :ruby do
  gem "sqlite3", "~> 1.3.6"
end

gemspec path: '../'
